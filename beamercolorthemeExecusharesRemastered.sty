\mode<presentation>

% Mostly taken from CTU's graphical manual on CTU website:
% https://www.cvut.cz/sites/default/files/content/e254fb38-e72d-463b-8c9f-cb0435416f29/cs/20201112-graficky-manual-identity-cvut-v-praze.pdf
\definecolor{ctu-white}{RGB}{255,255,255}
\definecolor{ctu-lightyellow}{RGB}{255,255,243}
\definecolor{ctu-lightblue}{HTML}{6BB0E2}
\definecolor{ctu-yellow}{HTML}{F9B000}
\definecolor{ctu-azure}{HTML}{00A8AB}
\definecolor{ctu-green}{HTML}{9FB000}
\definecolor{ctu-gray}{HTML}{9D9C9C}
\definecolor{ctu-pink}{HTML}{EA5792}
\definecolor{ctu-orange}{HTML}{E9530D}
\definecolor{ctu-red}{HTML}{D60829}
\definecolor{ctu-purple}{HTML}{A20E3E}
\definecolor{ctu-blue}{HTML}{0071BB}
\definecolor{ctu-darkblue}{HTML}{005863}
\definecolor{ctu-black}{HTML}{000000}

\definecolor{mywhite}{RGB}{255, 255, 243} % The background canvas colour.
\definecolor{myred}{RGB}{230, 37, 52} % The colour for (frame) titles, footlines etc.
\definecolor{mygrey}{RGB}{208, 202, 194} % The block body colour.
\definecolor{mylightgreen}{RGB}{127, 207, 171} % The item colour.
\definecolor{mydarkgreen}{RGB}{47, 121, 68} % The example colour.
\definecolor{mylightblue}{RGB}{22, 190, 207} % The alert colour.
\definecolor{mydarkblue}{RGB}{0, 61, 121} % The block title colour.

% The colour configuration.
\setbeamercolor{background canvas}{bg = ctu-lightyellow}
\setbeamercolor{title}{fg = ctu-lightyellow, bg = ctu-blue}
\setbeamercolor{frametitle}{fg = ctu-lightyellow, bg = ctu-blue}
\setbeamercolor{structure}{fg = ctu-blue}
\setbeamercolor{footnote mark}{fg = ctu-blue}
\setbeamercolor{section in head/foot}{fg = ctu-lightyellow, bg = ctu-blue}
\setbeamercolor{subsection in head/foot}{fg = ctu-lightyellow, bg = ctu-blue}

\setbeamercolor{item projected}{fg = ctu-lightyellow, bg = mylightgreen}
\setbeamercolor{subitem projected}{fg = ctu-lightyellow, bg = mylightgreen}
\setbeamercolor{subsubitem projected}{fg = ctu-lightyellow, bg = mylightgreen}
\setbeamercolor{itemize item}{fg = mylightgreen}
\setbeamercolor{itemize subitem}{fg = mylightgreen}
\setbeamercolor{itemize subsubitem}{fg = mylightgreen} 

\setbeamercolor{bibliography item}{fg=ctu-black}
\setbeamercolor{bibliography entry author}{fg=ctu-blue}
\setbeamercolor{bibliography entry title}{fg=ctu-red}
\setbeamercolor{bibliography entry location}{fg=ctu-orange}
\setbeamercolor{bibliography entry note}{fg=ctu-black}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%       All the boxes      %
%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% Generic/Standard block
\setbeamercolor{block title}{bg=ctu-blue,fg=ctu-lightyellow}
\setbeamercolor{block body}{bg=ctu-blue!25!,fg=ctu-black}

% Highlighted Alert block
\setbeamercolor{block title alerted}{bg=ctu-red,fg=ctu-lightyellow}
\setbeamercolor{block body alerted}{bg=ctu-red!25!,fg=ctu-black}

% Example block (exampleblock)
\setbeamercolor{block title example}{bg=ctu-yellow,fg=ctu-lightyellow}
\setbeamercolor{block body example}{bg=ctu-yellow!25!,fg=ctu-black}

% Theorem block customization
\AtBeginEnvironment{theorem}{
  \setbeamercolor{block title}{fg=ctu-lightyellow,bg=ctu-green!75!black}
  \setbeamercolor{block body}{bg=ctu-green!25!,fg=ctu-black}
}

% Definition block customization
\AtBeginEnvironment{definition}{
  \setbeamercolor{block title}{fg=white,bg=ctu-orange!75!black}
  \setbeamercolor{block body}{bg=ctu-orange!25!,fg=ctu-black}
}

% Proof block customization
\AtBeginEnvironment{proof}{
  \setbeamercolor{block title}{fg=ctu-lightyellow,bg=ctu-purple!75!black}
  \setbeamercolor{block body}{bg=ctu-purple!25!,fg=ctu-black}
}

% Lemma block customization
\AtBeginEnvironment{lemma}{
  \setbeamercolor{block title}{fg=white,bg=ctu-pink!75!black}
  \setbeamercolor{block body}{bg=ctu-pink!25!,fg=ctu-black}
}

% Corollary block customization
\AtBeginEnvironment{corollary}{
  \setbeamercolor{block title}{fg=white,bg=ctu-azure!75!black}
  \setbeamercolor{block body}{bg=ctu-azure!25!,fg=ctu-black}
}