% Define Monokai colors
\definecolor{monokai-background}{RGB}{39,40,34} % Background color
\definecolor{monokai-foreground}{RGB}{248,248,242} % Foreground text color
\definecolor{monokai-keyword}{RGB}{249,38,114} % Keywords (pink/red)
\definecolor{monokai-comment}{RGB}{117,113,94} % Comments (gray)
\definecolor{monokai-string}{RGB}{230,219,116} % Strings (yellow)
\definecolor{monokai-number}{RGB}{174,129,255} % Numbers (purple)
\definecolor{monokai-function}{RGB}{166,226,46} % Functions (green)

\lstset{
  backgroundcolor=\color{monokai-background},  % Set background color
  basicstyle=\ttfamily\footnotesize\color{monokai-foreground}, % Code font size and color
  keywordstyle=\color{monokai-keyword},        % Keywords color
  commentstyle=\color{monokai-comment},        % Comments color
  stringstyle=\color{monokai-string},          % Strings color
  numberstyle=\tiny\color{monokai-number},     % Line numbers styling
  frame=single,                                % Add a frame around the code
  breaklines=true,                             % Line breaking
  showstringspaces=false,                      % Hide spaces in strings
  numbers=left                                 % Line numbers on the left
}